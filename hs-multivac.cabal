name:                  hs-multivac
version:               0.1.0.0
synopsis:              Haskell bindings to the Multivac library
-- description:         
homepage:              https://github.com/meteogrid/hs-multivac
license:               GPL-2
license-file:          LICENSE
author:                Alberto Valverde GonzÃ¡lez
maintainer:            alberto@toscat.net
copyright:             2015
category:              Bindings
build-type:            Simple
extra-source-files:    README.md
cabal-version:         >=1.10

source-repository head
  type:                git
  location:            https://github.com/meteogrid/hs-multivac.git

Flag Debug
  Description: Enable debug support
  Default:     False

library
  build-tools:         c2hs
  build-depends:       base >=4.8 && <4.9
                     , vector
  hs-source-dirs:      src
  default-language:    Haskell2010
  exposed-modules:     Multivac
  other-modules:       Point
  ghc-options:         -Wall
                       -fwarn-incomplete-patterns
                       -fwarn-incomplete-uni-patterns
  extra-libraries:     stdc++
  c-sources:           cbits/cbits.cpp
  include-dirs:        cbits
                     , Multivac-1.10.1
  cc-options:          -Wall -O2
  if os(darwin)
    cc-options:       -mmacosx-version-min=10.6
  if os(linux)
    cc-options:       -fpermissive
  if flag(debug)
      cc-options:     -DDEBUG -DMULTIVAC_REPORT
